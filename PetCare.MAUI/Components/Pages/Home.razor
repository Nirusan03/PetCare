@page "/"
@using PetCare.MAUI.Services
@using PetCare.Shared.DTOs
@using PetCare.Shared
@inject UserState UserState
@inject IPetService PetService
@inject NavigationManager NavManager
@implements IDisposable

<div class="dashboard-container">
    @if (string.IsNullOrEmpty(UserState.Email))
    {
        <div class="text-center mt-5">
            <h1>Welcome to PetCare</h1>
            <p>Manage your pets' health and happiness.</p>
            <a href="/login" class="btn btn-primary btn-lg">Login</a>
            <br />
            <a href="/register" class="btn btn-link mt-2">Create Account</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>My Pets</h3>
            <button class="btn btn-success" @onclick="NavigateToAddPet">+ Add Pet</button>
        </div>

        @if (isLoading)
        {
            <p>Loading pets...</p>
        }
        else if (Pets.Count == 0)
        {
            <div class="alert alert-info">
                You haven't added any pets yet. Click "Add Pet" to get started!
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var pet in Pets)
                {
                    <div class="col-12 col-md-6 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(pet.PhotoUrl))
                                {
                                    <img src="@pet.PhotoUrl" class="rounded-circle me-3" style="width:60px;height:60px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-3" style="width:60px;height:60px;">
                                        <span>@(pet.Name?.FirstOrDefault())</span>
                                    </div>
                                }
                                <div>
                                    <h5 class="card-title mb-0">@pet.Name</h5>
                                    <small class="text-muted">@pet.Species • @pet.Breed</small>
                                </div>
                                <button class="btn btn-outline-primary ms-auto" @onclick="() => ViewPet(pet.PetId)">View</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-5 text-center">
            <button class="btn btn-danger btn-sm" @onclick="Logout">Logout</button>
        </div>
    }
</div>

@code {
    @code {
    private List<Pet> Pets = new();
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to state changes so the UI updates when you log in/out
        UserState.OnChange += StateHasChanged;
        await LoadPets();
    }

    private async Task LoadPets()
    {
        // Check if user is logged in (using the property from UserState)
        if (!string.IsNullOrEmpty(UserState.Email))
        {
            isLoading = true;
            try
            {
                // 1. Get the UserId from state (fallback to 1 if missing for testing)
                int userId = UserState.UserId > 0 ? UserState.UserId : 1;

                // 2. REAL API CALL (This was missing in your code)
                Pets = await PetService.GetPetsByUserAsync(userId);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading pets: {ex.Message}");
            }
            finally
            {
                isLoading = false;
                StateHasChanged(); // Refresh the UI to show the pets
            }
        }
    }

    private void NavigateToAddPet()
    {
        NavManager.NavigateTo("/add-pet");
    }

    private void ViewPet(int id)
    {
        NavManager.NavigateTo($"/pet/{id}");
    }

    private void Logout()
    {
        UserState.Logout();
        NavManager.NavigateTo("/login");
    }

    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged;
    }
}
}